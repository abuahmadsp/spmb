# Konfigurasi Lingkungan untuk SPMB Al Kahfi Batam

# Database
DATABASE_URL="sqlite://./database.sqlite"
DB_ENCRYPTION_KEY="gantidengankunciacakpanjangdansulitditebak"

# JWT Security
JWT_SECRET="gantidengankunciacakpanjangdansulitditebakuntukjwt"
JWT_EXPIRES_IN="24h"

# Session Security
SESSION_SECRET="gantidengankunciacaksessionsulitditebak"
SESSION_TIMEOUT=1800000  # 30 menit dalam milidetik

# Rate Limiting
MAX_LOGIN_ATTEMPTS=5
LOGIN_BLOCK_TIME=900000  # 15 menit dalam milidetik

# File Upload
MAX_FILE_SIZE=5242880  # 5MB dalam bytes
ALLOWED_ORIGINS="http://localhost:5173,https://spm-al-kahfi-batam.com"

# Email Configuration (jika diperlukan)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="email@domain.com"
SMTP_PASSWORD="password_email"
EMAIL_FROM="noreply@spm-al-kahfi-batam.com"

# Environment
NODE_ENV="development"  # atau "production"
PORT=3000

# Security Headers
SECURE_COOKIES=true
TRUST_PROXY=false